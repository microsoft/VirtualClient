{
    "Description": "Executes a command through the agent on a remote system.",
    "Metadata": {
        "SupportedPlatforms": "linux-x64,linux-arm64,win-x64,win-arm64"
    },
    "Parameters": {
        "Command": null,
        "CopyLogs": false
    },
    "Actions": [
        {
            "Type": "RemoteAgentExecutor",
            "Parameters": {
                "Scenario": "ExecuteAgentOnTarget",
                "Command": "$.Parameters.Command",
                "Tags": "SDK,SSH,Controller"
            }
        },
        {
            "Type": "RemoteLogCopy",
            "Parameters": {
                "Scenario": "CopyLogsFromTarget",
                "CopyLogs": "$.Parameters.CopyLogs",
                "Tags": "SDK,SSH,Controller"
            }
        }
    ]
}